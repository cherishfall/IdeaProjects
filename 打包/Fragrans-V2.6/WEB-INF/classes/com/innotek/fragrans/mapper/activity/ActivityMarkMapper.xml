<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innotek.fragrans.dao.activity.ActivityMarkDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.innotek.fragrans.entity.activity.ActivityMark" >
		<result column="id" property="id"/>
		<result column="activity_id" property="activityId"/>
		<result column="mark" property="mark"/>
		<result column="activity_type" property="activityType"/>
		<result column="flag" property="flag"/>
		<result column="created_by" property="createdBy"/>
		<result column="updated_by" property="updatedBy"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="activity_name" property="activityName"/>
		<result column="day_getcount" property="dayGetcount"/>
		<result column="all_getcount" property="allGetcount"/>
	</resultMap>
       
<!-- table all fields -->
<sql id="Base_Column_List" >
		 t.activity_id,
		 t.mark,
		 t.activity_type,
		 t.flag,
		 t.created_by,
		 t.updated_by,
		 t.create_time,
		 t.update_time,
	     t.id,
	     t.day_getcount,
	     t.all_getcount
</sql>

<!-- 查询条件 -->
<sql id="Example_Where_Clause">
	where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != '' " >
    	and t.id =  #{id}
	</if>
	<if test="activityId != null and activityId != '' " >
    	and t.activity_id =  #{activityId}
	</if>
	<if test="mark != null and mark != '' " >
    	and t.mark =  #{mark}
	</if>
	<if test="activityType != null " >
    	and t.activity_type =  #{activityType}
	</if>
	<if test="flag != null and flag != '' " >
    	and t.flag =  #{flag}
	</if>
	<if test="createdBy != null and createdBy != '' " >
    	and t.created_by =  #{createdBy}
	</if>
	<if test="updatedBy != null and updatedBy != '' " >
    	and t.updated_by =  #{updatedBy}
	</if>
	<if test="createTime != null " >
    	and t.create_time =  #{createTime}
	</if>
	<if test="updateTime != null " >
    	and t.update_time =  #{updateTime}
	</if>
	<if test="dayGetcount != null " >
    	and t.day_getcount =  #{dayGetcount}
	</if>
	<if test="allGetcount != null " >
    	and t.all_getcount =  #{allGetcount}
	</if>
	</trim>
</sql>

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  
	<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="id">
		SELECT UUID() as ID 
	</selectKey>
  
	insert into app_activity_mark 
	  <trim prefix="(" suffix=")" suffixOverrides="," >
	  	flag,
		create_time,
	 	<if test="id != null and id != '' " >
		 id,
		</if>
    	<if test="activityId != null and activityId != '' " >
		 activity_id,
		</if>
    	<if test="mark != null and mark != '' " >
		 mark,
		</if>
    	<if test="activityType != null " >
		activity_type,
		</if>
    	<if test="createdBy != null and createdBy != '' " >
		 created_by,
		</if>
		<if test="dayGetcount != null and dayGetcount != '' " >
		 day_getcount,
		</if>
		<if test="allGetcount != null and allGetcount != '' " >
		 all_getcount,
		</if>
    </trim>
	values
	 <trim prefix="(" suffix=")" suffixOverrides="," >
	 	'ADD',now(),
	 	<if test="id != null and id != '' " >
  		<![CDATA[  #{id}, ]]>
    	</if>
    	<if test="activityId != null and activityId != '' " >
  		<![CDATA[  #{activityId}, ]]>
    	</if>
    	<if test="mark != null and mark != '' " >
  		<![CDATA[  #{mark}, ]]>
    	</if>
    	<if test="activityType != null " >
  		<![CDATA[  #{activityType}, ]]>
    	</if>
    	<if test="createdBy != null and createdBy != '' " >
  		<![CDATA[  #{createdBy}, ]]>
    	</if>
    	<if test="dayGetcount != null and dayGetcount != '' " >
  		<![CDATA[  #{dayGetcount}, ]]>
    	</if>
    	<if test="allGetcount != null and allGetcount != '' " >
  		<![CDATA[  #{allGetcount}, ]]>
    	</if>
    	 </trim>
</insert>

<!-- 根据id，修改记录-->  
<update id="update" parameterType="Object" >
	update app_activity_mark t set 
   <trim suffixOverrides="," >
    <if test="activityId != null and activityId != '' " >
  	<![CDATA[  t.activity_id = #{activityId}, ]]>
    </if>
    <if test="mark != null and mark != '' " >
  	<![CDATA[  t.mark = #{mark}, ]]>
    </if>
    <if test="activityType != null " >
  	<![CDATA[  t.activity_type = #{activityType}, ]]>
    </if>
  	<![CDATA[  t.flag = 'UPDATE', ]]>
    <if test="updatedBy != null and updatedBy != '' " >
  	<![CDATA[  t.updated_by = #{updatedBy}, ]]>
    </if>
     <if test="dayGetcount != null and dayGetcount != '' " >
  	<![CDATA[  t.day_getcount = #{dayGetcount}, ]]>
    </if>
    <if test="allGetcount != null and allGetcount != '' " >
  	<![CDATA[  t.all_getcount = #{allGetcount}, ]]>
    </if>
  	<![CDATA[  t.update_time = now(), ]]>
     </trim> where t.id= #{id}
 </update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from app_activity_mark where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from app_activity_mark t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from app_activity_mark t 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	,ac.activity_name
	from app_activity_mark t 
	left join app_activity ac on t.activity_id = ac.id
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition == ''">
		order by t.id desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
     <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
<!-- *************************************自定义接口****************************************************** -->
<!-- 根据活动标识获取活动id -->
<select id="getActivityMarkByMark" resultMap="BaseResultMap"  parameterType="Object">
	SELECT * 
	FROM app_activity_mark 
	WHERE mark=#{mark}	
	limit 1
</select>
<!-- 根据活动id获取活动标识 -->
<select id="getActivityMarkByActivityId" resultMap="BaseResultMap"  parameterType="Object">
	SELECT * 
	FROM app_activity_mark 
	WHERE activity_id=#{activity_id}
	limit 1
</select>

<!-- 根据活动标识获取活动id -->
<select id="getActivityMarkByMark2" resultMap="BaseResultMap"  parameterType="Object">
	SELECT * FROM app_activity_mark WHERE flag != 'DELETE' AND mark=#{mark} LIMIT 1 
</select>
</mapper>   
