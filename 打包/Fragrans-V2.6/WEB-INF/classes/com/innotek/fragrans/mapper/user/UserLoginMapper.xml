<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innotek.fragrans.dao.user.UserLoginDao" > 
<!-- Result Map-->
	<resultMap id="BaseResultMap" type="com.innotek.fragrans.entity.AppUserLoginEntity" >
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="user_account" property="userAccount" />
		<result column="device_no" property="deviceNo" />
		<result column="client_version" property="clientVersion" />
		<result column="status" property="status" />
		<result column="login_key" property="loginKey" />
		<result column="login_count" property="loginCount" />
		<result column="last_login_time" property="lastLoginTime" />
		<result column="err_count" property="errCount" />
		<result column="last_err_time" property="lastErrTime" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="flag" property="flag"/>
	</resultMap>
       
	<!-- table all fields -->
	<sql id="Base_Column_List" >
		 t.id,
		 t.user_id,
		 t.device_no,
		 t.client_version,
		 t.status,
		 t.login_key,		 
		 t.last_login_time,
		 t.login_count,
		 t.create_time,
		 t.update_time,
		 t.err_count,
		 t.last_err_time,
		 t.flag
	</sql>
	
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim  suffixOverrides="," >
			<if test="id != null" >
			    and t.id = #{id}
			</if>
			<if test="userId != null and userId != '' " >
		    	and t.user_id =  #{userId}
			</if>
			<if test="deviceNo != null and deviceNo != '' " >
		    	and t.device_no =  #{deviceNo}
			</if>
			<if test="clientVersion != null and clientVersion != '' " >
		    	and t.client_version =  #{clientVersion}
			</if>
			<if test="status != null " >
		    	and t.status =  #{status}
			</if>
			<if test="loginKey != null and loginKey != '' " >
		    	and t.login_key =  #{loginKey}
			</if>		
			<if test="lastLoginTime != null " >
		    	and t.last_login_time =  #{lastLoginTime}
			</if>
			<if test="loginCount != null " >
		    	and t.login_count =  #{loginCount}
			</if>
			<if test="createTime != null " >
		    	and t.create_time =  #{createTime}
			</if>
			<if test="updateTime != null " >
		    	and t.update_time =  #{updateTime}
			</if>
			<if test="errCount != null " >
		    	and t.err_count =  #{errCount}
			</if>
			<if test="lastErrTime != null " >
		    	and t.last_err_time =  #{lastErrTime}
			</if>
			<if test="flag != null and flag != '' " >
		    	and t.flag =  #{flag}
			</if>
			<if test="userAccount != null and userAccount != '' " >
		    	and u.user_account =  #{userAccount}
			</if>
		</trim>
	</sql>

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  
	<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
		SELECT LAST_INSERT_ID() as ID 
	</selectKey>
  
	insert into APP_USER_LOGIN 
	  <trim prefix="(" suffix=")" suffixOverrides="," >
	 	<if test="userId != null and userId != '' " >
		 user_id,
		</if>
    	<if test="deviceNo != null and deviceNo != '' " >
		 device_no,
		</if>
    	<if test="clientVersion != null and clientVersion != '' " >
		 client_version,
		</if>
    	<if test="status != null " >
		status,
		</if>
    	<if test="loginKey != null and loginKey != '' " >
		 login_key,
		</if>    	
    	<if test="lastLoginTime != null " >
		last_login_time,
		</if>
    	<if test="loginCount != null " >
		login_count,
		</if>
    	<if test="createTime != null " >
		create_time,
		</if>
    	<if test="updateTime != null " >
		update_time,
		</if>
		<if test="errCount != null " >
		err_count,
		</if>
		<if test="lastErrTime != null " >
		last_err_time,
		</if>
    	 </trim>
	values
	 <trim prefix="(" suffix=")" suffixOverrides="," >
	 	<if test="userId != null and userId != '' " >
  		<![CDATA[  #{userId}, ]]>
    	</if>
    	<if test="deviceNo != null and deviceNo != '' " >
  		<![CDATA[  #{deviceNo}, ]]>
    	</if>
    	<if test="clientVersion != null and clientVersion != '' " >
  		<![CDATA[  #{clientVersion}, ]]>
    	</if>
    	<if test="status != null " >
  		<![CDATA[  #{status}, ]]>
    	</if>
    	<if test="loginKey != null and loginKey != '' " >
  		<![CDATA[  #{loginKey}, ]]>
    	</if>    	
    	<if test="lastLoginTime != null " >
  		<![CDATA[  #{lastLoginTime}, ]]>
    	</if>
    	<if test="loginCount != null " >
  		<![CDATA[  #{loginCount}, ]]>
    	</if>
    	<if test="createTime != null " >
  		<![CDATA[  #{createTime}, ]]>
    	</if>
    	<if test="updateTime != null " >
  		<![CDATA[  #{updateTime}, ]]>
    	</if>
    	<if test="errCount != null " >
  		<![CDATA[  #{errCount}, ]]>
    	</if>
    	<if test="lastErrTime != null " >
  		<![CDATA[  #{lastErrTime}, ]]>
    	</if>
    	 </trim>
</insert>

<!-- 根据id，修改记录-->  
<update id="update" parameterType="Object" >
	update APP_USER_LOGIN t set 
   <trim suffixOverrides="," >
               t.flag = 'UPDATE',
	<if test="userId != null and userId != '' " >
  	<![CDATA[  t.user_id = #{userId}, ]]>
    </if>
    <if test="deviceNo != null and deviceNo != '' " >
  	<![CDATA[  t.device_no = #{deviceNo}, ]]>
    </if>
    <if test="clientVersion != null and clientVersion != '' " >
  	<![CDATA[  t.client_version = #{clientVersion}, ]]>
    </if>
    <if test="status != null " >
  	<![CDATA[  t.status = #{status}, ]]>
    </if>
    <if test="loginKey != null and loginKey != '' " >
  	<![CDATA[  t.login_key = #{loginKey}, ]]>
    </if>
    <if test="lastLoginTime != null " >
  	<![CDATA[  t.last_login_time = #{lastLoginTime}, ]]>
    </if>
    <if test="loginCount != null " >
  	<![CDATA[  t.login_count = #{loginCount}, ]]>
    </if>
    <if test="createTime != null " >
  	<![CDATA[  t.create_time = #{createTime}, ]]>
    </if>
    <if test="updateTime != null " >
  	<![CDATA[  t.update_time = #{updateTime}, ]]>
    </if>
    <if test="errCount != null " >
  	<![CDATA[  t.err_count = #{errCount}, ]]>
    </if>
    <if test="lastErrTime != null " >
  	<![CDATA[  t.last_err_time = #{lastErrTime}, ]]>
    </if>
    </trim> where t.id= #{id}
 </update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from APP_USER_LOGIN where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from APP_USER_LOGIN t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from APP_USER_LOGIN t 
	left join app_user u on t.user_id=u.id
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	,u.user_account
	from APP_USER_LOGIN t 
	left join app_user u on t.user_id=u.id
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition == ''">
		order by t.create_time desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
     <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
<!-- 根据userId查询 -->
<select id="queryByUserId"  resultMap="BaseResultMap" parameterType="String">
	select * 
	from APP_USER_LOGIN 
	where 1=1
	and user_id = #{userId}
	and flag != 'DELETE'
</select>

<!-- *************************************自定义接口****************************************************** -->
<!-- 根据userId更新表中的 login_key、weixpn_login_count、update_time-->
	<update id="updateLoginKey" parameterType="Object">
		update APP_USER_LOGIN set
		<trim suffixOverrides=",">
		<if test="loginKey != null and loginKey != ''">
  		<![CDATA[ login_key  = #{loginKey}, ]]>
		</if>
		<if test="weixpnLoginCount != null and weixpnLoginCount != ''">
  		<![CDATA[ weixpn_login_count  = #{weixpnLoginCount}, ]]>
		</if>
		<![CDATA[  update_time = now(), ]]>
		</trim>
		where user_id = #{userId}
	</update>
</mapper>   
