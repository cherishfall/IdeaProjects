<!-- 作废用户之前不成功的消费记录 -->
<update id="deleteWalletBalanceCangeByRecord" parameterType="Object">
	UPDATE app_wallet_balance_change 
	SET CHANGE_STATUS = 400,UPDATE_TIME = NOW(),UPDATED_BY= 'admin' 
	WHERE CHANGE_STATUS = 100 AND HANDLE_TYPE = 2 
	  AND user_id = #{userId} 
</update>
<!-- 更新订单状态 -->
<update id="updateByOrderNo" parameterType="java.util.Map">
	UPDATE app_wallet_balance_change
	SET CHANGE_STATUS = #{status},UPDATE_TIME = #{updateTime},UPDATED_BY= 'admin'
	WHERE CHANGE_STATUS = 100
	  AND ORDER_NO = #{orderNo}
</update>

