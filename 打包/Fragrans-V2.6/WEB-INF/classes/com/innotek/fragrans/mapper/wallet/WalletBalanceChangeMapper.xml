<!-- 根据用户ID查询钱包操作记录-->
<select id="findWalletBalanceChangeByUserId" resultMap="BaseResultMap"  parameterType="java.util.Map">
	SELECT * 
	FROM app_wallet_balance_change
	WHERE CHANGE_STATUS=200 and user_id=#{userId}
	ORDER BY create_time desc
	LIMIT #{startIndex},#{pageLength}
</select>

<select id="findWalletBalanceChangeListByUserId" resultMap="BaseResultMap"  parameterType="Object">
	SELECT *
	FROM app_wallet_balance_change
	WHERE CHANGE_STATUS=200 and user_id=#{userId}
	ORDER BY create_time desc
	LIMIT 1
</select>

