   <trim suffixOverrides="," >
	<if test="cityCode != null " >
  	<![CDATA[  t.city_code = #{cityCode}, ]]>
    </if>
	<if test="busiType != null " >
  	<![CDATA[  t.busi_type = #{busiType}, ]]>
    </if>
    <if test="busiId != null and busiId != '' " >
  	<![CDATA[  t.busi_id = #{busiId}, ]]>
    </if>
    <if test="busiDesc != null and busiDesc != '' " >
  	<![CDATA[  t.busi_desc = #{busiDesc}, ]]>
    </if>
    <if test="plateNo != null and plateNo != '' " >
  	<![CDATA[  t.plate_no = #{plateNo}, ]]>
    </if>
    <if test="plateColor != null" >
  	<![CDATA[  t.plate_color = #{plateColor}, ]]>
    </if>
