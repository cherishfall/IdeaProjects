<mapper namespace="com.innotek.fragrans.dao.user.ReviewLogDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.innotek.fragrans.entity.user.ReviewLog" >
	<result column="id" property="id"/>
		<result column="city_code" property="cityCode"/>
		<result column="busi_type" property="busiType"/>
		<result column="busi_id" property="busiId"/>
		<result column="busi_desc" property="busiDesc"/>
		<result column="plate_no" property="plateNo"/>
		<result column="plate_color" property="plateColor"/>
		<result column="review_status" property="reviewStatus"/>
		<result column="reviewer" property="reviewer"/>
		<result column="review_time" property="reviewTime"/>
		<result column="pass_reason" property="passReason"/>
		<result column="reject_reason" property="rejectReason"/>
		<result column="flag" property="flag"/>
		<result column="created_by" property="createdBy"/>
		<result column="create_time" property="createTime"/>
		<result column="license_photo" property="licensePhoto"/>
		<result column="license_photo_vice" property="licensePhotoVice"/>
		<result column="area_name" property="areaName"/>
	</resultMap>
       
<!-- table all fields -->
<sql id="Base_Column_List" >
		 t.city_code,
		 t.busi_type,
		 t.busi_id,
		 t.busi_desc,
		 t.plate_no,
		 t.plate_color,
		 t.review_status,
		 t.reviewer,
		 t.review_time,
		 t.pass_reason,
		 t.reject_reason,
		 t.flag,
		 t.created_by,
		 t.create_time,
	     t.id
</sql>

<!-- 查询条件 -->
<sql id="Example_Where_Clause">
	where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and t.id = #{id}
	</if>
	<if test="cityCode != null and cityCode != ''" >
    	and t.city_code like '${cityCode}%'
	</if>
	<if test="busiType != null " >
    	and t.busi_type =  #{busiType}
	</if>
	<if test="busiId != null and busiId != '' " >
    	and t.busi_id =  #{busiId}
	</if>
	<if test="busiDesc != null and busiDesc != '' " >
    	and t.busi_desc =  #{busiDesc}
	</if>
	<if test="plateNo != null and plateNo != '' " >
    	and t.plate_no =  #{plateNo}
	</if>
	<if test="plateColor != null " >
    	and t.plate_color =  #{plateColor}
	</if>
	<if test="reviewStatus != null " >
    	and t.review_status =  #{reviewStatus}
	</if>
	<if test="reviewer != null and reviewer != '' " >
    	and t.reviewer =  #{reviewer}
	</if>
	<if test="reviewTime != null " >
    	and t.review_time =  #{reviewTime}
	</if>
	<if test="passReason != null and passReason != '' " >
    	and t.pass_reason =  #{passReason}
	</if>
	<if test="rejectReason != null and rejectReason != '' " >
    	and t.reject_reason =  #{rejectReason}
	</if>
	<if test="flag != null and flag != '' " >
    	and t.flag =  #{flag}
	</if>
	<if test="createdBy != null and createdBy != '' " >
    	and t.created_by like  '${createdBy}%'
	</if>
	<if test="createTime != null " >
    	and t.create_time =  #{createTime}
	</if>
	</trim>
</sql>

