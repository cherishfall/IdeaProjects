     </trim> where t.id= #{id}
 </update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from app_review_log where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from app_review_log t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from app_review_log t 
	<include refid="Example_Where_Clause"/>
	<if test="isLimit == 1 " >
    	and (t.review_status = 0 or t.review_status = 1)
	</if>
	<if test="userCityCode != null and userCityCode != '' ">
		and t.city_code LIKE '${userCityCode}%'
	</if>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	,c.license_photo,c.license_photo_vice,ba.area_name
	from app_review_log t 
	left join app_user_car_info c ON t.busi_id = c.id
	LEFT JOIN base_area ba ON t.city_code = ba.area_code
	<include refid="Example_Where_Clause"/>
	<if test="isLimit == 1 " >
    	and (t.review_status = 0 or t.review_status = 1)
	</if>
	<if test="userCityCode != null and userCityCode != '' ">
		and t.city_code LIKE '${userCityCode}%'
	</if>
	<if test="pager.orderCondition == ''">
		order by t.create_time asc,t.id desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
     <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
<!-- *************************************自定义接口****************************************************** -->
 <!-- 批量受理车牌认证审核 -->
 <update id="updateBatchReviewLogReviewing" parameterType="Object">
		UPDATE app_review_log
		SET reviewer = #{reviewer},review_status = 1,review_time = now(),flag='UPDATE'
		WHERE id IN 
		<foreach  collection="ids" item="id" open="(" close=")" separator=",">   
            #{id}  
        </foreach> 
		and review_status = 0
 </update>
 
 <!-- 根据id和busiType查询 -->
 <select id="queryReviewLogByIdAndBusiType"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from app_review_log t where t.id = #{id} and t.busi_type = #{busiType}
 </select>
 
 <!-- 根据用户车牌ID查询审核日志 -->
 <select id="findReviewlogByPlateId" resultMap="BaseResultMap" parameterType="java.lang.String">
 	SELECT t.* FROM app_review_log t
	LEFT JOIN app_user_car_info t1 ON t.BUSI_ID = t1.ID
	WHERE 1=1 AND t1.CAR_ID = #{_parameter} and t.flag != 'DELETE'
	ORDER BY t1.CREATE_TIME DESC
	LIMIT 1
 </select>
 
 <!-- 根据业务id删除 -->
 <delete id="deleteByBusiIds" parameterType="Object">
	delete from app_review_log where busi_id in 
		<foreach  collection="list" item="busiId" open="(" close=")" separator=",">   
            #{busiId}  
        </foreach> 
 </delete>
</mapper>   
