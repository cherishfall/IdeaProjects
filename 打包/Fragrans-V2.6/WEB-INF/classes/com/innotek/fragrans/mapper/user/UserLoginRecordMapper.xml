		 <trim prefix="(" suffix=")" suffixOverrides="," >
		 		now(),
		 	<if test="id != null" >
	  		<![CDATA[  #{id}, ]]>
	    	</if>
		 	<if test="userId != null and userId != '' " >
	  		<![CDATA[  #{userId}, ]]>
	    	</if>
	    	<if test="deviceNo != null and deviceNo != '' " >
