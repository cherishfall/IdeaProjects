	    	<if test="deviceOsVersion != null and deviceOsVersion != '' " >
	  		<![CDATA[  #{deviceOsVersion}, ]]>
	    	</if>
	    	<if test="loginKey != null and loginKey != '' " >
	  		<![CDATA[  #{loginKey}, ]]>
	    	</if>
	    	<if test="type != null " >
	  		<![CDATA[  #{type}, ]]>
	    	</if>
	    	<if test="status != null and status != '' " >
	  		<![CDATA[  #{status}, ]]>
	    	</if>
	    	<if test="description != null and description != '' " >
	  		<![CDATA[  #{description}, ]]>
	    	</if>
	    	 </trim>
	</insert>

