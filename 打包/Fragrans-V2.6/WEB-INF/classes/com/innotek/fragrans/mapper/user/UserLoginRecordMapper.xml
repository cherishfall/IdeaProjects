		<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="id">
			SELECT UUID() as ID 
		</selectKey>
	  
		insert into APP_USER_LOGIN_RECORD 
		  <trim prefix="(" suffix=")" suffixOverrides="," >
		  		create_time,
		  	<if test="id != null" >
			 id,
			</if>
		 	<if test="userId != null and userId != '' " >
