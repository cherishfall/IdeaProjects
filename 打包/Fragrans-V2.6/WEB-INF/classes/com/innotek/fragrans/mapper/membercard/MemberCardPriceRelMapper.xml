<!-- 查询会员卡充值参数 -->
<select id="queryRechargePara" resultMap="RechargeParaMap"  parameterType="java.util.Map">
	 SELECT id,recharge_amount,pay_amount,is_default
	 FROM app_member_card_price_rel
	 WHERE FLAG != 'DELETE'
	 AND DATE_FORMAT(NOW(),'%Y-%m-%d %H:%i:%s') BETWEEN start_time AND end_time
	 <if test="areaCode != null and areaCode != '' ">
	 	AND AREA_CODE = #{areaCode}
	 </if>
	 <if test="isCommon != null">
	 	 AND IS_COMMON = #{isCommon}
	 </if>
	 ORDER BY DISPLAY_NO ASC;
</select>

<!-- 查询配置是否存在 -->
<select id="findIsExit" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from app_member_card_price_rel t 
	where 1=1 and t.flag != 'DELETE'
	<if test="areaCode != null " >
    	and t.area_code =  #{areaCode}
	</if>
	<if test="payAmount != null " >
    	and t.pay_amount =  #{payAmount}
	</if>
	<if test="isCommon != null " >
    	and t.is_common =  #{isCommon}
	</if>
	<if test= "id != null and id != '' ">
		<if test="isDefault != null " >
	    	and t.is_default =  #{isDefault}
		</if>
		<if test="displayNo != null " >
    		and t.display_no =  #{displayNo}
		</if>
	</if>
</select>

	<!-- 查询会员卡充值参数 -->
	<select id="queryRechargePricePara" resultType="java.lang.String" parameterType="Object">
		SELECT pay_amount
		FROM app_member_card_price_rel
		WHERE FLAG != 'DELETE'
		<if test="_parameter != null and _parameter != ''" >
			and (area_code LIKE '${_parameter}%' or IS_COMMON = 1)
		</if>
		ORDER BY pay_amount ASC
	</select>
