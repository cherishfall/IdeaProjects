<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	 select <include refid="Base_Column_List" />,t1.area_name 
	 from app_member_card_price_rel t 
	 left join base_area t1 on t.area_code = t1.area_code
	 where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from app_member_card_price_rel t 
	left join base_area t1 on t.area_code = t1.area_code
	<include refid="Example_Where_Clause"/>
	and t.flag != 'DELETE'
	<if test="areaId != null and areaId != '' ">
	 	and t1.id = #{areaId}
	</if>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>,t1.area_name
	from app_member_card_price_rel t 
	left join base_area t1 on t.area_code = t1.area_code
	<include refid="Example_Where_Clause"/>
	and t.flag != 'DELETE'
	<if test="areaId != null and areaId != '' ">
	 	and t1.id = #{areaId}
	</if>
	<if test="pager.orderCondition == ''">
		order by t.is_common desc,t.area_code desc,t.is_default desc,display_no asc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
     <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
