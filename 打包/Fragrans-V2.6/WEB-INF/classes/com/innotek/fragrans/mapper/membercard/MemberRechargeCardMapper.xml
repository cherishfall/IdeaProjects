    </if>
    <if test="password != null and password != '' " >
  	<![CDATA[  t.password = #{password}, ]]>
    </if>
    <if test="denomination != null " >
  	<![CDATA[  t.denomination = #{denomination}, ]]>
    </if>
    <if test="validDate != null " >
  	<![CDATA[  t.valid_date = #{validDate}, ]]>
    </if>
    <if test="isUsed != null " >
  	<![CDATA[  t.is_used = #{isUsed}, ]]>
    </if>
    <if test="isOvertime != null " >
  	<![CDATA[  t.is_overtime = #{isOvertime}, ]]>
    </if>
    <if test="isRecevice != null " >
  	<![CDATA[  t.is_recevice = #{isRecevice}, ]]>
    </if>
    <if test="flag != null and flag != '' " >
  	<![CDATA[  t.flag = #{flag}, ]]>
    </if>
    <if test="createdBy != null and createdBy != '' " >
  	<![CDATA[  t.created_by = #{createdBy}, ]]>
