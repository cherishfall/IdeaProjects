<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from app_member_recharge_card where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from app_member_recharge_card t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from app_member_recharge_card t 
	<include refid="Example_Where_Clause"/>
	and t.flag != 'DELETE'
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>,t1.producer,t1.recevicer
	from app_member_recharge_card t 
	left join app_member_recharge_card_batch t1 on t.batch_id = t1.batch_id
	<include refid="Example_Where_Clause"/>
	and t.flag != 'DELETE'
	<if test="pager.orderCondition == ''">
		order by t.is_used asc,t.is_overtime asc,t.is_recevice asc,t.create_time desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
     <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
