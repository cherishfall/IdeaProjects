<!-- 根据充值卡号查询充值卡信息 -->
<select id="findByCardNo" resultMap="BaseResultMap"  parameterType="java.lang.String">
	SELECT * FROM app_member_recharge_card 
	WHERE RECHARGE_CARD_NO = #{_parameter}
</select>

<!-- 批量写入 -->
 <insert id="batchSave" parameterType="java.util.ArrayList">
 	INSERT INTO app_member_recharge_card 
 	(id,batch_id,recharge_card_no,password,denomination,valid_date,is_used,is_overtime,
 		is_recevice,flag,created_by,create_time)
	VALUES
	<foreach collection="list" index="inden" separator="," item="item">
	 (#{item.id},#{item.batchId},#{item.rechargeCardNo},#{item.password},
	  #{item.denomination},#{item.validDate},#{item.isUsed},#{item.isOvertime},
  	  #{item.isRecevice},#{item.flag},#{item.createdBy},#{item.createTime})
  	 </foreach>
 </insert>
 
 <!-- 更新会员充值卡已领取-->
 <update id="BatchUpdateIsRecevice" parameterType="java.util.Map">
 	UPDATE app_member_recharge_card 
 	SET IS_RECEVICE = 1,FLAG = 'UPDATE',
 	    UPDATED_BY = #{userAccount},UPDATE_TIME = NOW() WHERE BATCH_ID in
 	<foreach collection="array" open="(" close=")" item="batchId" separator=",">
		#{batchId}
	</foreach>
 </update>
 
 <!-- 根据充值卡号查询充值卡信息 -->
<select id="findByCardNoLock" resultMap="BaseResultMap"  parameterType="java.lang.String">
	SELECT * FROM app_member_recharge_card 
	WHERE RECHARGE_CARD_NO = #{_parameter}
	  for update
</select>

<!-- 根据批次ID查询 -->
<select id="cvsMemberRechargeCardList" resultMap="BaseResultMap" >
	SELECT t.*,t1.producer,t1.recevicer 
	FROM app_member_recharge_card t
	left join app_member_recharge_card_batch t1 on t.batch_id = t1.batch_id
	WHERE t.FLAG != 'DELETE' AND t.IS_OVERTIME = 0 AND t.IS_RECEVICE = 0 
		AND DATE_FORMAT(NOW(),'%Y-%m-%d %H:%i:%s') &lt; 
			DATE_FORMAT(t.valid_date,'%Y-%m-%d 23:59:59')  
		AND t.BATCH_ID  =  #{batchId}
<!-- 		<foreach collection="array" open="(" close=")" item="batchId" separator=","> -->
<!-- 			#{batchId} -->
<!-- 		</foreach> -->
</select>
 
