		<result column="last_sign_time" property="lastSignTime"/>
	</resultMap>	
	
       
<!-- table all fields -->
<sql id="Base_Column_List" >
		 t.point_conf_id,
		 t.point_limit_id,
		 t.user_id,
		 t.order_no,
		 t.status,
		 t.point_method,
		 t.change_point,
		 t.point_change_desc,
		 t.create_time,
		 t.update_time,
	     t.id
</sql>

<!-- 查询条件 -->
<sql id="Example_Where_Clause">
	where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and t.id = #{id}
	</if>
	<if test="pointConfId != null and pointConfId != '' " >
    	and t.point_conf_id =  #{pointConfId}
	</if>
	<if test="pointLimitId != null and pointLimitId != '' " >
    	and t.point_limit_id =  #{pointLimitId}
	</if>
	<if test="userId != null and userId != '' " >
    	and t.user_id =  #{userId}
	</if>
	<if test="orderNo != null and orderNo != '' " >
    	and t.order_no =  #{orderNo}
	</if>
	<if test="status != null " >
    	and t.status =  #{status}
	</if>
	<if test="pointMethod != null " >
    	and t.point_method =  #{pointMethod}
	</if>
	<if test="changePoint != null " >
    	and t.change_point =  #{changePoint}
	</if>
	<if test="pointChangeDesc != null and pointChangeDesc != '' " >
    	and t.point_change_desc =  #{pointChangeDesc}
	</if>
	<if test="createTime != null " >
    	and t.create_time =  #{createTime}
	</if>
	<if test="updateTime != null " >
    	and t.update_time =  #{updateTime}
	</if>
	</trim>
</sql>

<!-- 插入记录 -->
