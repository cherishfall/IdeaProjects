	<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="id">
		SELECT UUID() as ID 
	</selectKey>
  
	insert into app_user_point_record 
	  <trim prefix="(" suffix=")" suffixOverrides="," >
	    <if test="id != null and id != '' " >
		 id,
		</if>
	 	<if test="pointConfId != null and pointConfId != '' " >
		 point_conf_id,
		</if>
    	<if test="pointLimitId != null and pointLimitId != '' " >
		 point_limit_id,
		</if>
    	<if test="userId != null and userId != '' " >
		 user_id,
		</if>
    	<if test="orderNo != null and orderNo != '' " >
		 order_no,
		</if>
    	<if test="status != null " >
		status,
		</if>
    	<if test="pointMethod != null " >
		point_method,
		</if>
    	<if test="changePoint != null " >
		change_point,
		</if>
    	<if test="pointChangeDesc != null and pointChangeDesc != '' " >
		 point_change_desc,
		</if>
    	<if test="createTime != null " >
		create_time,
		</if>
    	<if test="updateTime != null " >
		update_time,
		</if>
    	 </trim>
	values
	 <trim prefix="(" suffix=")" suffixOverrides="," >
	    <if test="id != null and id != '' " >
  			<![CDATA[  #{id}, ]]>
    	</if>
	 	<if test="pointConfId != null and pointConfId != '' " >
  		<![CDATA[  #{pointConfId}, ]]>
    	</if>
    	<if test="pointLimitId != null and pointLimitId != '' " >
  		<![CDATA[  #{pointLimitId}, ]]>
    	</if>
    	<if test="userId != null and userId != '' " >
  		<![CDATA[  #{userId}, ]]>
    	</if>
    	<if test="orderNo != null and orderNo != '' " >
  		<![CDATA[  #{orderNo}, ]]>
    	</if>
    	<if test="status != null " >
  		<![CDATA[  #{status}, ]]>
    	</if>
    	<if test="pointMethod != null " >
  		<![CDATA[  #{pointMethod}, ]]>
    	</if>
    	<if test="changePoint != null " >
  		<![CDATA[  #{changePoint}, ]]>
    	</if>
    	<if test="pointChangeDesc != null and pointChangeDesc != '' " >
  		<![CDATA[  #{pointChangeDesc}, ]]>
    	</if>
    	<if test="createTime != null " >
  		<![CDATA[  #{createTime}, ]]>
    	</if>
    	<if test="updateTime != null " >
  		<![CDATA[  #{updateTime}, ]]>
    	</if>
    	 </trim>
</insert>

<!-- 根据id，修改记录-->  
<update id="update" parameterType="Object" >
	update app_user_point_record t set 
   <trim suffixOverrides="," >
	<if test="pointConfId != null and pointConfId != '' " >
  	<![CDATA[  t.point_conf_id = #{pointConfId}, ]]>
    </if>
    <if test="pointLimitId != null and pointLimitId != '' " >
  	<![CDATA[  t.point_limit_id = #{pointLimitId}, ]]>
    </if>
    <if test="userId != null and userId != '' " >
  	<![CDATA[  t.user_id = #{userId}, ]]>
    </if>
    <if test="orderNo != null and orderNo != '' " >
  	<![CDATA[  t.order_no = #{orderNo}, ]]>
    </if>
    <if test="status != null " >
  	<![CDATA[  t.status = #{status}, ]]>
    </if>
    <if test="pointMethod != null " >
  	<![CDATA[  t.point_method = #{pointMethod}, ]]>
    </if>
    <if test="changePoint != null " >
  	<![CDATA[  t.change_point = #{changePoint}, ]]>
    </if>
    <if test="pointChangeDesc != null and pointChangeDesc != '' " >
  	<![CDATA[  t.point_change_desc = #{pointChangeDesc}, ]]>
    </if>
    <if test="createTime != null " >
  	<![CDATA[  t.create_time = #{createTime}, ]]>
    </if>
    <if test="updateTime != null " >
  	<![CDATA[  t.update_time = #{updateTime}, ]]>
    </if>
     </trim> where t.id= #{id}
 </update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from app_user_point_record where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from app_user_point_record t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from app_user_point_record t 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from app_user_point_record t 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition == ''">
		order by t.id desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
     <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
<!-- *************************************自定义接口****************************************************** -->
<!-- 查询用户积分明细 -->
<select id="findRecordCountByUserId" resultType="java.lang.Integer" parameterType="java.lang.String">
	SELECT COUNT(1) FROM app_user_point_record  
	WHERE user_id = #{_parameter}
</select>

<!-- 分页查询用户积分明细 -->
<select id="findRecordsByUserId" resultMap="UserPointRecordsMap"  parameterType="java.util.Map">
	SELECT t.point_method,t.point_change_desc,t.status,t.change_point,t.create_time
	FROM app_user_point_record t
	WHERE t.user_id = #{userId}
	ORDER BY t.create_time DESC,t.POINT_CHANGE_DESC DESC
	limit #{pageIndex},#{pageLength}
</select>

<!-- 查询用户今日签到获取积分 -->
<select id="findTodayPointByUserId" resultType="java.lang.String" parameterType="java.lang.String">
	SELECT SUM(t.point) todayPoint FROM app_user_sign_record t
	WHERE t.user_id = #{_parameter}
	AND DATE_FORMAT(t.create_time,'%Y-%m-%d') = DATE_FORMAT(NOW(),'%Y-%m-%d')
</select>

<!-- 查询积分变动 -->
<select id="findByOrderNo" resultType="java.lang.String" parameterType="java.lang.String">
	SELECT t.CHANGE_POINT
	FROM app_user_point_record t 
	WHERE t.order_no = #{_parameter}
</select>

<!-- 查询用户 连续签到次数 -->
<select id="findUserContinuitySignCount" resultMap="SignUserItemMap" >
 SELECT A.id as user_id,B.sign_count,B.last_sign_time FROM app_user A 
      LEFT JOIN app_user_member B ON A.id = B.user_id 
</select>

</mapper>   
