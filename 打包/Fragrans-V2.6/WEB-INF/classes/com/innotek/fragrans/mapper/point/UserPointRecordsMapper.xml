<mapper namespace="com.innotek.fragrans.dao.point.UserPointRecordDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.innotek.fragrans.entity.point.UserPointRecord" >
	<result column="id" property="id"/>
		<result column="point_conf_id" property="pointConfId"/>
		<result column="point_limit_id" property="pointLimitId"/>
		<result column="user_id" property="userId"/>
		<result column="order_no" property="orderNo"/>
		<result column="status" property="status"/>
		<result column="point_method" property="pointMethod"/>
		<result column="change_point" property="changePoint"/>
		<result column="point_change_desc" property="pointChangeDesc"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<resultMap id="UserPointRecordsMap" type="com.innotek.fragrans.entity.point.GetUserPointRecordsItem" >
	    <result column="point_method" property="pointType"/>
		<result column="point_change_desc" property="pointDesc"/>
		<result column="status" property="status"/>
		<result column="change_point" property="point"/>
		<result column="create_time" property="date"/>
	</resultMap>
	
