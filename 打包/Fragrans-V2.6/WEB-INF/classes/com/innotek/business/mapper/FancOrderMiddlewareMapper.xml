</delete>
<insert id="batchSave" parameterType="java.util.List">
	insert into fanc_order_middleware 
	  (id,order_no,city_code,area_code,pay_type,user_id,user_account,parkrecord_id,
		price,subject,order_body,order_status,order_time,pay_time,buyer_account,
		notify_status,notify_time,create_time,statdate)
