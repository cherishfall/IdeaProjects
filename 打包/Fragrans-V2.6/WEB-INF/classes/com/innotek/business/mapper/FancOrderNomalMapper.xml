<!-- 根据账单编码获取账单 -->
<select id="queryFancOrderNomalByOrderNo" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<if test="orderType == null or orderType == '' or orderType == '1'.toString()">
		<include refid="Base_Column_List"/> 
	</if>
	<if test="orderType != null and orderType != '' and orderType == '2'.toString()">
		t.order_no,t.city_code,t.area_code, t.pay_type,t.user_account, t.parkrecord_id, t.subject,
		t.order_body, t.order_status, t.order_time, t.pay_time, t.buyer_account,t.notify_status,
		o.refund_fee order_fee, t.order_fee_rate, t.create_time, t.statdate, t.id
	</if>
	from fanc_order_nomal t
	<if test="orderType != null and orderType != '' and orderType == '2'.toString()">
		join app_order_refund o on o.order_no=t.order_no
	</if>
	where t.order_no = #{orderNo}
</select>
<!-- 根据账单日期编码获取账单 -->
<select id="queryFancOrderNomalByStatDate" resultMap="BaseResultMap"  parameterType="Object">
	select <include refid="Base_Column_List"/> from fanc_order_nomal t
	where t.statdate = #{statdate}
</select>
<!-- 获取账单列表 -->
<select id="queryFancOrderNomalListByStateDate" resultMap="BaseResultMap"  parameterType="java.util.Map">
	select 
	<include refid="Base_Column_List"/>
	,ba1.area_name city_name,ba2.area_name 
	from fanc_order_nomal t 
	left join base_area ba1 on t.city_code = ba1.area_code
	left join base_area ba2 on t.area_code = ba2.area_code
	WHERE t.statdate &gt;= #{startDate} AND t.statdate &lt;= #{endDate} 
	<if test="cityId != null and cityId != '' ">
		and ba1.id = #{cityId}
	</if>
	order by t.statdate desc
</select>
