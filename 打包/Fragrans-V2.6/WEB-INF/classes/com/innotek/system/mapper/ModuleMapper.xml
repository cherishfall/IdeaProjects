<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innotek.system.dao.ModuleDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="com.innotek.system.entity.Module">
		<result column="id" property="id" />
		<result column="module_name" property="moduleName" />
		<result column="module_desc" property="moduleDesc" />
		<result column="module_url" property="moduleUrl" />
		<result column="parent_id" property="parentId" />
		<result column="order_num" property="orderNum" />
		<result column="iconCls" property="iconCls" />
		<result column="module_level" property="moduleLevel" />
		<result column="actions" property="actions" />
		<result column="super_admin" property="superAdmin" />
		<result column="created_by" property="createdBy" />
		<result column="updated_by" property="updatedBy" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
	</resultMap>

	<!-- dictionary table all fields -->
	<sql id="Base_Column_List">
		module_name,
		module_desc,
		module_url,
		parent_id,
		order_num,
		iconCls,
		module_level,
		actions,
		super_admin,
		created_by,
		updated_by,
		create_time,
		update_time,
		id
	</sql>

	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="moduleName != null ">
				and module_name = #{moduleName}
			</if>
			<if test="moduleDesc != null ">
				and module_desc = #{moduleDesc}
			</if>
			<if test="moduleUrl != null ">
				and module_url = #{moduleUrl}
			</if>
			<if test="parentId != null ">
				and parent_id = #{parentId}
			</if>
			<if test="orderNum != null ">
				and order_num = #{orderNum}
			</if>
			<if test="iconCls != null ">
				and iconCls = #{iconCls}
			</if>
			<if test="moduleLevel != null ">
				and module_level = #{moduleLevel}
			</if>
			<if test="actions != null ">
				and actions = #{actions}
			</if>
			<if test="superAdmin != null ">
				and super_admin = #{superAdmin}
			</if>
			<if test="createdBy != null and createdBy != ''">
				and created_by like CONCAT('%',#{createdBy},'%')
			</if>
			<if test="updatedBy != null and updatedBy != ''">
				and updated_by like CONCAT('%',#{updatedBy},'%')
			</if>
			<if test="createTime != null and createTime != ''">
				and create_time like CONCAT('%',#{createTime},'%')
			</if>
			<if test="updateTime != null and updateTime != ''">
				and update_time like CONCAT('%',#{updateTime},'%')
			</if>
		</trim>
	</sql>

	<!-- 插入记录 -->
	<insert id="add" parameterType="Object">
		<selectKey resultType="java.lang.String" order="BEFORE"
			keyProperty="id">
			SELECT UUID() as ID
		</selectKey>
		insert into BASE_MODULE
		<trim prefix="(" suffix=")" suffixOverrides=",">
			create_time,
			<if test="id != null ">
				id,
			</if>
			<if test="moduleName != null ">
				module_name,
			</if>
			<if test="moduleDesc != null ">
				module_desc,
			</if>
			<if test="moduleUrl != null ">
				module_url,
			</if>
			<if test="parentId != null ">
				parent_id,
			</if>
			<if test="orderNum != null ">
				order_num,
			</if>
			<if test="iconCls != null ">
				iconCls,
			</if>
			<if test="moduleLevel != null ">
				module_level,
			</if>
			<if test="actions != null ">
				actions,
			</if>
			<if test="superAdmin != null ">
				super_admin,
			</if>
			<if test="createdBy != null ">
				created_by,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			now(),
			<if test="id != null ">
            <![CDATA[  #{id}, ]]>
			</if>
			<if test="moduleName != null ">
				#{moduleName},
			</if>
			<if test="moduleDesc != null ">
				#{moduleDesc},
			</if>
			<if test="moduleUrl != null ">
				#{moduleUrl},
			</if>
			<if test="parentId != null ">
				#{parentId},
			</if>
			<if test="orderNum != null ">
				#{orderNum},
			</if>
			<if test="iconCls != null ">
				#{iconCls},
			</if>
			<if test="moduleLevel != null ">
				#{moduleLevel},
			</if>
			<if test="actions != null ">
				#{actions},
			</if>
			<if test="superAdmin != null ">
				#{superAdmin},
			</if>
			<if test="createdBy != null ">
				#{createdBy},
			</if>
		</trim>
	</insert>

	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="Object">
		update BASE_MODULE set
		<trim suffixOverrides=",">
			update_time = now(),
			<if test="moduleName != null ">
				module_name = #{moduleName},
			</if>
			<if test="moduleDesc != null ">
				module_desc = #{moduleDesc},
			</if>
			<if test="moduleUrl != null ">
				module_url = #{moduleUrl},
			</if>
			<if test="parentId != null ">
				parent_id = #{parentId},
			</if>
			<if test="orderNum != null ">
				order_num = #{orderNum},
			</if>
			<if test="iconCls != null ">
				iconCls = #{iconCls},
			</if>
			<if test="moduleLevel != null ">
				module_level = #{moduleLevel},
			</if>
			<if test="actions != null ">
				actions = #{actions},
			</if>
			<if test="superAdmin != null ">
				super_admin = #{superAdmin},
			</if>
			<if test="updatedBy != null ">
				updated_by = #{updatedBy},
			</if>
		</trim>
		where id = #{id}
	</update>

	<!-- 删除记录 -->
	<delete id="delete" parameterType="Object">
		delete from BASE_MODULE where
		id = #{id}
	</delete>

	<!-- 根据id查询 -->
	<select id="queryById" resultMap="BaseResultMap" parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from BASE_MODULE where id = #{id}
		limit 1
	</select>

	<!-- 列表总数 -->
	<select id="queryByCount" resultType="java.lang.Integer"
		parameterType="Object">
		select count(1) from BASE_MODULE
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 查询列表 -->
	<select id="queryByList" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from BASE_MODULE
		<include refid="Example_Where_Clause" />
		<if test="pager.orderCondition != null and pager.orderCondition != ''">
			${pager.orderCondition}
		</if>
		<if
			test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''">
			${pager.mysqlQueryCondition}
		</if>
	</select>
	<!-- *************************************自定义接口****************************************************** -->

	<!-- 根据父级ID获取模块 -->
	<select id="queryModuleByModuleLevel" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from BASE_MODULE
		where
		module_level = #{moduleLevel}
		<if test="superAdmin != null ">
			and super_admin = #{superAdmin}
		</if>
		order by order_num
	</select>

	<!-- 获取所有模块（不带分页） -->
	<select id="queryAllModule" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from BASE_MODULE where 1 = 1
		<if test="superAdmin != null ">
			and super_admin = #{superAdmin}
		</if>
		order by order_num
	</select>


	<!-- 根据用户id查询根节点 -->
	<select id="queryModuleByUserAndLevel" resultMap="BaseResultMap"
		parameterType="Object">
		SELECT DISTINCT
		id,module_name,module_desc,module_url,parent_id,order_num,iconCls,module_level,actions
		FROM BASE_MODULE m
		WHERE module_level = #{moduleLevel}
		<if test="userId != null and userId != '' ">
			AND EXISTS (
			SELECT * FROM BASE_ROLE_REL r
			WHERE r.obj_id =
			m.id AND r.rel_type = 0
			AND EXISTS (
			SELECT 1 FROM BASE_ROLE_REL u
			WHERE u.role_id = r.role_id AND u.rel_type =
			1 AND u.obj_id =
			#{userId}
			)
			)
		</if>
		<if test="superAdmin != null ">
			and super_admin = #{superAdmin}
		</if>
		order by order_num
	</select>

	<!-- 根据parentId查询有无下级模块 -->
	<select id="queryByParentId" resultType="java.lang.Integer" parameterType="Object">
		select count(1) from BASE_MODULE where parent_id = #{id}
	</select>
	
	<!-- 根据parentId查询有无下级模块 -->
	<select id="queryModuleByParentId" resultMap="BaseResultMap" parameterType="Object">
		select * from BASE_MODULE where parent_id = #{parentId}
	</select>
	
	<!-- 判断是否分配给角色 -->
	<select id="queryAboutRoleRel" resultMap="BaseResultMap" parameterType="Object">
		SELECT bm.super_admin FROM base_module bm
		LEFT JOIN base_role_rel rel ON rel.obj_id=bm.id
		WHERE rel.rel_type=0 AND rel.obj_id=#{id}
	</select>
	
</mapper>   
