<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innotek.fragrans.dao.fanc.FancOrderWhiteListDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.innotek.fragrans.entity.fanc.FancOrderWhiteList" >
	<result column="id" property="id"/>
	<result column="white_type" property="whiteType"/>
	<result column="white_value" property="whiteValue"/>
	<result column="is_enabled" property="isEnabled"/>
	</resultMap>
       
<!-- table all fields -->
<sql id="Base_Column_List" >
		 t.white_type,
		 t.white_value,
		 t.is_enabled,
	     t.id
</sql>

<!-- 查询条件 -->
<sql id="Example_Where_Clause">
	where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != '' " >
	    and t.id = #{id}
	</if>
	<if test="whiteType != null " >
    	and t.white_type =  #{whiteType}
	</if>
	<if test="whiteValue != null and whiteValue != '' " >
    	and t.white_value =  #{whiteValue}
	</if>
	<if test="isEnabled != null " >
    	and t.is_enabled =  #{isEnabled}
	</if>
	</trim>
</sql>

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  	<selectKey resultType="java.lang.String" order="BEFORE"
			keyProperty="id">
		SELECT sys_guid() from dual
	</selectKey>
		
	insert into fanc_order_white_list 
	  <trim prefix="(" suffix=")" suffixOverrides="," >
	  	<if test="id != null and id != '' " >
	    id,
		</if>
	 	<if test="whiteType != null " >
		white_type,
		</if>
    	<if test="whiteValue != null and whiteValue != '' " >
		 white_value,
		</if>
    	<if test="isEnabled != null " >
		is_enabled,
		</if>
    	 </trim>
	values
	 <trim prefix="(" suffix=")" suffixOverrides="," >
	 	<if test="id != null and id != '' " >
	    <![CDATA[  #{id}, ]]>
		</if>
	 	<if test="whiteType != null " >
  		<![CDATA[  #{whiteType}, ]]>
    	</if>
    	<if test="whiteValue != null and whiteValue != '' " >
  		<![CDATA[  #{whiteValue}, ]]>
    	</if>
    	<if test="isEnabled != null " >
  		<![CDATA[  #{isEnabled}, ]]>
    	</if>
    	 </trim>
</insert>

<!-- 根据id，修改记录-->  
<update id="update" parameterType="Object" >
	update fanc_order_white_list t set 
   <trim suffixOverrides="," >
	<if test="whiteType != null " >
  	<![CDATA[  t.white_type = #{whiteType}, ]]>
    </if>
    <if test="whiteValue != null and whiteValue != '' " >
  	<![CDATA[  t.white_value = #{whiteValue}, ]]>
    </if>
    <if test="isEnabled != null " >
  	<![CDATA[  t.is_enabled = #{isEnabled}, ]]>
    </if>
     </trim> where t.id= #{id}
 </update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from fanc_order_white_list where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from fanc_order_white_list t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from fanc_order_white_list t 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	<if test="pager.oracleQueryConditionStart != null and pager.oracleQueryConditionStart != ''">
		${pager.oracleQueryConditionStart}
	</if>
	select 
	<include refid="Base_Column_List"/>
	from fanc_order_white_list t 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition == ''">
		order by t.id desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
	<if test="pager.oracleQueryConditionEnd != null and pager.oracleQueryConditionEnd != ''">
		${pager.oracleQueryConditionEnd}
	</if>
</select>
<!-- *************************************自定义接口****************************************************** -->
<!-- 查询账单数据是否在白名单中 -->
<select id="queryFancOrderWhiteListByList" resultMap="BaseResultMap"  parameterType="java.util.List">
	select 
	<include refid="Base_Column_List"/>
	from fanc_order_white_list t where 1=1
	<foreach collection="list" index="index" separator=" or " item="item" open=" and (" close=")">
    	(t.white_type =  #{item.whiteType} and t.white_value =  #{item.whiteValue} and t.is_enabled =  #{item.isEnabled})
	</foreach>
</select>
</mapper>   
