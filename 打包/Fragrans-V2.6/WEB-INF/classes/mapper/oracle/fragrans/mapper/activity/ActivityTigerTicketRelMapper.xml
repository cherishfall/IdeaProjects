<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innotek.fragrans.dao.activity.ActivityTigerTicketRelDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.innotek.fragrans.entity.activity.ActivityTigerTicketRel" >
	<result column="id" property="id"/>
		<result column="tiger_conf_id" property="tigerConfId"/>
		<result column="tiger_conf_limit_id" property="tigerConfLimitId"/>
		<result column="ticket_conf_id" property="ticketConfId"/>
		<result column="weight" property="weight"/>
		<result column="flag" property="flag"/>
		<result column="created_by" property="createdBy"/>
		<result column="updated_by" property="updatedBy"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="ticket_name" property="ticketName"/>
	</resultMap>
       
<!-- table all fields -->
<sql id="Base_Column_List" >
		 t.tiger_conf_id,
		 t.tiger_conf_limit_id,
		 t.ticket_conf_id,
		 t.weight,
		 t.flag,
		 t.created_by,
		 t.updated_by,
		 t.create_time,
		 t.update_time,
	     t.id
</sql>

<!-- 查询条件 -->
<sql id="Example_Where_Clause">
	where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and t.id = #{id}
	</if>
	<if test="tigerConfId != null and tigerConfId != '' " >
    	and t.tiger_conf_id =  #{tigerConfId}
	</if>
	<if test="tigerConfLimitId != null and tigerConfLimitId != '' " >
    	and t.tiger_conf_limit_id =  #{tigerConfLimitId}
	</if>
	<if test="ticketConfId != null and ticketConfId != '' " >
    	and t.ticket_conf_id =  #{ticketConfId}
	</if>
	<if test="weight != null " >
    	and t.weight =  #{weight}
	</if>
	<if test="flag != null and flag != '' " >
    	and t.flag =  #{flag}
	</if>
	<if test="createdBy != null and createdBy != '' " >
    	and t.created_by =  #{createdBy}
	</if>
	<if test="updatedBy != null and updatedBy != '' " >
    	and t.updated_by =  #{updatedBy}
	</if>
	<if test="createTime != null " >
    	and t.create_time =  #{createTime}
	</if>
	<if test="updateTime != null " >
    	and t.update_time =  #{updateTime}
	</if>
	</trim>
</sql>

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  
	<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="id">
		SELECT sys_guid() from dual 
	</selectKey>
  
	insert into app_activity_tiger_ticket_rel 
	  <trim prefix="(" suffix=")" suffixOverrides="," >
	  	flag,create_time,
	 	<if test="id != null and id != '' " >
		 id,
		</if>
	 	<if test="tigerConfId != null and tigerConfId != '' " >
		 tiger_conf_id,
		</if>
    	<if test="tigerConfLimitId != null and tigerConfLimitId != '' " >
		 tiger_conf_limit_id,
		</if>
    	<if test="ticketConfId != null and ticketConfId != '' " >
		 ticket_conf_id,
		</if>
    	<if test="weight != null " >
		weight,
		</if>
    	<if test="createdBy != null and createdBy != '' " >
		 created_by,
		</if>
    	 </trim>
	values
	 <trim prefix="(" suffix=")" suffixOverrides="," >
	 	'ADD',sysdate,
	 	<if test="id != null and id != '' " >
  		<![CDATA[  #{id}, ]]>
    	</if>
	 	<if test="tigerConfId != null and tigerConfId != '' " >
  		<![CDATA[  #{tigerConfId}, ]]>
    	</if>
    	<if test="tigerConfLimitId != null and tigerConfLimitId != '' " >
  		<![CDATA[  #{tigerConfLimitId}, ]]>
    	</if>
    	<if test="ticketConfId != null and ticketConfId != '' " >
  		<![CDATA[  #{ticketConfId}, ]]>
    	</if>
    	<if test="weight != null " >
  		<![CDATA[  #{weight}, ]]>
    	</if>
    	<if test="createdBy != null and createdBy != '' " >
  		<![CDATA[  #{createdBy}, ]]>
    	</if>
    	 </trim>
</insert>

<!-- 根据id，修改记录-->  
<update id="update" parameterType="Object" >
	update app_activity_tiger_ticket_rel t set 
   <trim suffixOverrides="," >
	<if test="tigerConfId != null and tigerConfId != '' " >
  	<![CDATA[  t.tiger_conf_id = #{tigerConfId}, ]]>
    </if>
    <if test="tigerConfLimitId != null and tigerConfLimitId != '' " >
  	<![CDATA[  t.tiger_conf_limit_id = #{tigerConfLimitId}, ]]>
    </if>
    <if test="ticketConfId != null and ticketConfId != '' " >
  	<![CDATA[  t.ticket_conf_id = #{ticketConfId}, ]]>
    </if>
    <if test="weight != null " >
  	<![CDATA[  t.weight = #{weight}, ]]>
    </if>
    <if test="updatedBy != null and updatedBy != '' " >
  	<![CDATA[  t.updated_by = #{updatedBy}, ]]>
    </if>
    <![CDATA[  t.flag = 'UPDATE', ]]>
  	<![CDATA[  t.update_time = sysdate, ]]>
     </trim> where t.id= #{id}
 </update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from app_activity_tiger_ticket_rel where id = #{id}
</delete>
 
<!-- 根据id查询 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from app_activity_tiger_ticket_rel t where t.id = #{id}
</select>

<!-- 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from app_activity_tiger_ticket_rel t 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	<if test="pager.oracleQueryConditionStart != null and pager.oracleQueryConditionStart != ''">
		${pager.oracleQueryConditionStart}
	</if>
	select 
	<include refid="Base_Column_List"/>
	from app_activity_tiger_ticket_rel t 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition == ''">
		order by t.create_time desc
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
	<if test="pager.oracleQueryConditionEnd != null and pager.oracleQueryConditionEnd != ''">
		${pager.oracleQueryConditionEnd}
	</if>
</select>
<!-- *************************************自定义接口****************************************************** -->
<select id="getTicketRelByLimit"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	,conf.ticket_name
	 from app_activity_tiger_ticket_rel t 
	 left join app_activity_ticket_conf conf on t.ticket_conf_id = conf.id
	 where t.tiger_conf_limit_id = #{tigerConfLimitId} 
	 order by t.create_time desc
</select>

<select id="getTicketRelByTiger"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	,conf.ticket_name
	 from app_activity_tiger_ticket_rel t 
	 left join app_activity_ticket_conf conf on t.ticket_conf_id = conf.id
	 where t.tiger_conf_id = #{tigerConfId} 
	 order by t.create_time desc
</select>

<select id="findWeightSumByRandom" resultType="java.lang.Integer" parameterType="Object">
	SELECT SUM(weight)
	FROM app_activity_tiger_ticket_rel
	GROUP BY tiger_conf_id HAVING tiger_conf_id=#{tigerConfId}
</select>

<delete id="deleteByTigerConfId" parameterType="Object">
	delete from app_activity_tiger_ticket_rel where tiger_conf_id = #{tigerConfId}
</delete>

<delete id="deleteByTigerConfLimitId" parameterType="Object">
	delete from app_activity_tiger_ticket_rel where tiger_conf_limit_id = #{tigerConfLimitId}
</delete>
</mapper>   
