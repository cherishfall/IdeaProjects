<!-- 查询申诉处理进程ID -->
<select id="queryBusiProcessIdByMap" resultType="java.lang.String"  parameterType="java.util.Map">
<!-- 	SELECT t.BUSI_PROCESS_ID FROM app_process_conf t -->
<!--     LEFT JOIN base_role_rel t1 ON t.role_id = t1.role_id -->
<!-- 	LEFT JOIN base_user t2 ON t2.id = t1.obj_id -->
<!-- 	WHERE t.BUSI_TYPE = #{busiType}  AND t.PROCESS_ROLE_ID = #{processRoleId} -->
<!--  	  AND t2.id = #{roleId} -->
<!--  	LIMIT 1  -->
	 SELECT t.BUSI_PROCESS_ID FROM app_process_conf t 
	 WHERE t.BUSI_TYPE = 1 AND t.ROLE_ID = (
     	SELECT t.id FROM base_role t
     	LEFT JOIN base_role_rel t1 ON t.id = t1.role_id
     	LEFT JOIN base_user t2 ON t1.obj_id = t2.ID
     	WHERE t1.rel_type = #{busiType} AND t2.id = #{roleId}
     		AND ROWNUM = 1
	) AND t.PROCESS_ROLE_ID = #{processRoleId}
</select>
</mapper>   
